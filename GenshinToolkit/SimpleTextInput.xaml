<Window x:Class="GenshinToolkit.SimpleTextInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenshinToolkit"
        mc:Ignorable="d"
        Title="SimpleTextInput" MinHeight="300" MinWidth="500" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" Grid.ColumnSpan="2" Margin="5,5,5,5"/>
        <Button x:Name="OKButton" Content="OK" Height="29" Width="96" Click="OKButton_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" Margin="0,0,20,0"/>
        <Button x:Name="CancelButton" Content="Cancel" Height="29" Width="96" Click="CancelButton_Click" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Margin="20,0,0,0"/>
    </Grid>
</Window>
